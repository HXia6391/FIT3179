{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "title": {"text": "Valuation by Industry","fontSize": 14,"font": "Verdana"},
  "width": 600,
  "height": 600,
  "padding": 5,

  "signals": [
    {"name": "method","value": "squarify"},
    {"name": "ratio","value": 1.6108}
  ],

  "data": [
    {
      "name": "tree",
      "url": "https://raw.githubusercontent.com/Hxia6391/FIT3179/main/DataVisualization2/data/World_Wide_Unicorn-Company-List-treemap.csv",
      "format": {"type": "csv"},
      "transform": [
        {"type": "nest","keys": ["Industry","Company"]},
        {
          "type": "treemap",
          "field": "Valuation ($B)",
          "method": {"signal": "method"},
          "ratio": {"signal": "ratio"},
          "paddingInner": 1,
          "size": [{"signal": "width"},{"signal": "height"}]
        }
      ]
    },
    {"name": "nodes","source": "tree","transform": [{"type": "filter","expr": "datum.children"}]},
    {"name": "leaves","source": "tree","transform": [{"type": "filter","expr": "!datum.children"}]}
  ],

  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "tree", "field": "Industry", "sort": true},
      "range": [
        "#A2D2FF", "#BDE0FE", "#D7E3FC", "#CDB4DB", "#F1C0E8",
        "#FFC8DD", "#FFAFCC", "#FFD6A5", "#FFDFD3", "#FEE440",
        "#E2F0CB", "#BEE1C3", "#B8E0D2", "#CAF0F8", "#B5EAEA"
      ]
    }
  ],

  "legends": [
    {
      "fill": "color",
      "title": "Industry",
      "orient": "bottom",
      "columns": 3,
      "encode": {
        "labels": {"update": {"font": {"value": "Verdana"}, "fontSize": {"value": 10}}},
        "title": {"update": {"font": {"value": "Verdana"}, "fontSize": {"value": 12}}}
      }
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": {"data": "tree"},
      "encode": {
        "update": {
          "x": {"field": "x0"}, "x2": {"field": "x1"},
          "y": {"field": "y0"}, "y2": {"field": "y1"},
          "fill": {"scale": "color", "field": "Industry"},
          "fillOpacity": {"value": 0.8}
        },
        "hover": {"fillOpacity": {"value": 1}}
      }
    },
    {
      "type": "rect",
      "from": {"data": "nodes"},
      "encode": {
        "enter": {"stroke": {"value": "#000"}, "strokeWidth": {"value": 1}},
        "update": {"x": {"field": "x0"}, "x2": {"field": "x1"}, "y": {"field": "y0"}, "y2": {"field": "y1"}, "fill": {"value": "transparent"}}
      }
    },
    {
      "type": "rect",
      "from": {"data": "leaves"},
      "encode": {
        "enter": {"stroke": {"value": "#ffffff"}, "strokeWidth": {"value": 0.2}},
        "update": {
          "x": {"field": "x0"}, "x2": {"field": "x1"},
          "y": {"field": "y0"}, "y2": {"field": "y1"},
          "fill": {"value": "transparent"},
          "tooltip": {"signal": "'Industry: ' + datum.Industry + '\\nCompany: ' + datum.Company + '\\nValuation: $' + datum['Valuation ($B)'] + 'B'"}
        },
        "hover": {"fill": {"scale": "color", "field": "Industry"}, "fillOpacity": {"value": 1}}
      }
    },
    {
      "type": "text",
      "from": {"data": "leaves"},
      "interactive": false,
      "encode": {
        "enter": {
          "font": {"value": "Verdana"},
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "fill": {"value": "#000"},
          "fontWeight": {"value": "bold"},
          "text": {"signal": "datum.Company == 'Other companies' ? '' : datum.Company"}
        },
        "update": {
          "x": {"signal": "0.5 * (datum.x0 + datum.x1)"},
          "y": {"signal": "0.5 * (datum.y0 + datum.y1)"},
          "fontSize": {"signal": "clamp(sqrt(max(1,(datum.x1-datum.x0)*(datum.y1-datum.y0)))/6, 7, 16)"},
          "fillOpacity": [
            {"test": "(datum.x1 - datum.x0) >= 32 && (datum.y1 - datum.y0) >= 18 && ((datum.x1-datum.x0)*(datum.y1-datum.y0)) >= 900", "value": 1},
            {"value": 0}
          ]
        }
      }
    }
  ],

  "config": {"view": {"stroke": null}, "background": null}
}
